{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "address",
    "id",
    "email",
    "username",
    "password",
    "name",
    "phone",
    "__v"
  ],
  "properties": {
    "address": {
      "type": "object",
      "required": [
        "geolocation",
        "city",
        "street",
        "number",
        "zipcode"
      ],
      "properties": {
        "geolocation": {
          "type": "object",
          "required": [
            "lat",
            "long"
          ],
          "properties": {
            "lat": {
              "type": "string",
              "description": "Latitude coordinate"
            },
            "long": {
              "type": "string",
              "description": "Longitude coordinate"
            }
          }
        },
        "city": {
          "type": "string"
        },
        "street": {
          "type": "string"
        },
        "number": {
          "type": "integer"
        },
        "zipcode": {
          "type": "string"
        }
      }
    },
    "id": {
      "type": "integer"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "username": {
      "type": "string"
    },
    "password": {
      "type": "string"
    },
    "name": {
      "type": "object",
      "required": [
        "firstname",
        "lastname"
      ],
      "properties": {
        "firstname": {
          "type": "string"
        },
        "lastname": {
          "type": "string"
        }
      }
    },
    "phone": {
      "type": "string"
    },
    "__v": {
      "type": "integer"
    }
  }
}